<configuration scan="true" scanPeriod="60 seconds" debug="false">

	<property name="logPath" value="./logs/${spring.application.name}" />

	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger - %msg%n</pattern>
			<charset>UTF-8</charset>
		</encoder>
	</appender>

	<appender name="runtime" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger - %msg%n</pattern>
			<charset>UTF-8</charset>
		</encoder>
		<rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
			<maxHistory>30</maxHistory>
			<maxFileSize>50MB</maxFileSize>
			<totalSizeCap>256MB</totalSizeCap>
			<fileNamePattern>${logPath}/%d{yyyy-MM-dd}.%i.log</fileNamePattern>
		</rollingPolicy>
	</appender>

	<logger name="com.alibaba.nacos.client.naming" level="off" />
	<logger name="com.alibaba.cloud.nacos.client.NacosPropertySourceBuilder" level="off" />

<!--	<logger name="com.due.bridge.tomcat.logger.BridgeTomcatLoggerAspect" level="debug" />-->
	<logger name="com.due.basic.setting.logger.BridgeTomcatLoggerAspect" level="debug" />
	<logger name="com.due.bridge.tomcat.controller.BridgeControllerErrorHandler" level="debug" />

	<root level="info">
		<appender-ref ref="console" />
		<appender-ref ref="runtime" />
	</root>

</configuration>
